{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "es2019", "esnext", "dom"],
    "module": "ES6",

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declarationDir": "types",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "composite": true,

    /* Linting */
    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "include": ["src"]
}
